/* pages/boss/boss.wxss */
.header{
  width: 100%;
  height: 400rpx;
  padding-top: 35px;
  box-sizing: border-box;
}
.title{
  width:70%;
  margin:0 auto;
  height: 150rpx;
}
.top_input{
  width: 80%;
  height: 40px;
  margin: 20px  auto 0 auto;
  padding-left: 25px;
  background-color: white;
  border-radius: 20px;
  color:gray;
  font-size: 13px;
  position: relative;
}
.search{
  color: rgb(105, 218, 238);
  font-size: 13px;
  position: absolute;
  top:30%;
  left: 85%;
  z-index: 10;
}
.tip_img{
  width: 50px;
  height: 50px;
  margin-top: 20px;
  margin-left: 10px
}
.tip{
  vertical-align: top;
  display: inline-block;
  font-weight: 700;
  font-size: 15px;
  margin-top: 35px;
  margin-left: 15px;
  opacity: 0.8;
}
.all_kinds{
  margin-top: 10px;
}
.kind{
  display: inline-block;
  padding: 5px 15px;
  background-color: #f6f6f6;
  font-size: 13px;
  color: gray;
  margin: 10px;
  border-radius: 15px;
}
.bottom{
  height: 50px;
  background-color: rgb(39, 238, 245);
}